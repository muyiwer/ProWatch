@model PagedList.IPagedList<ProwatchWebApp.Models.project>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_ProWatchLayout.cshtml";
}
<div class="content-wrapper">
