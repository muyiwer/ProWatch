                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col --> 
            <div class="col-md-4 col-sm-7 col-xs-13">
                <div class="info-box">
					<a href="~/projects/Index"><span class="info-box-icon bg-red"><i class="fa fa-briefcase"></i></span></a>
                    <div class="info-box-content">
						<a href="~/projects/Index"><span class="info-box-text"><strong>Active Project</strong></span>
							<span class="info-box-number">@ViewBag.allProject</span>
</div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>
            <div class="col-md-4 col-sm-7 col-xs-13">
                <div class="info-box">
					<a href="~/reports/Index"><span class="info-box-icon bg-green"><i class="fa fa-list-alt"></i></span></a>
						<div class="info-box-content">
							<a href="~/reports/Index"><span class="info-box-text"><strong>Report</strong></span></a>
				
							<span class="info-box-number">@ViewBag.report</span>
</div>
