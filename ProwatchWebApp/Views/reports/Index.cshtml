@model IEnumerable<ProwatchWebApp.Models.report>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ProWatchLayout.cshtml";
}


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li>
				<a href="index.html">
					<em class="fa fa-home"></em>
				</a>
			</li>
			<li class="active">General Report</li>
		</ol>
	</div><!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">General Report</h1>
		</div>
	</div><!--/.row-->

	<p>
		@Html.ActionLink("Create New", "Create")
	</p>
	<table class="table">
		<tr>

			<th>
				Report Description
			</th>

			<th>
				Status
			</th>
			<th>
				Name
			</th>
			<th>
				Task
			</th>

		</tr>

		@foreach (var item in Model)
		{
			<tr>

				<td>
					@Html.DisplayFor(modelItem => item.reportDescription)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.projectStatu.projectStatusName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.proUser.firstname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.task.taskName)
				</td>

			</tr>
		}

	</table>
	</div>